{
  "name": "proofofexistence",
  "version": "1.12.2",
  "description": "Web application to prove the existence of files using the bitcoin blockchain.",
  "main": "lib/server.js",
  "scripts": {
    "build": "npm run build:modernizr && ./scripts/vendor.sh",
    "build:modernizr": "modernizr --config modernizr-config.json --dest public/vendor/modernizr.js",
    "clean": "rm -Rf public/vendor",
    "release": "release-it",
    "start": "nodemon server/app.js",
    "sweep": "node lib/sweep.js",
    "test": "mocha --timeout 10000 && standard 'lib/**/*.js' 'config/*.js'",
    "watch": "nodemon --watch lib --watch config -e js,hbs,yaml,json --exec npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poexio/proofofexistence.git"
  },
  "author": "PoEx Co., Ltd",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@poexio/light-bootstrap-dashboard": "^2.0.2",
    "animate.css": "^3.5.2",
    "bitcoin-convert": "^1.0.4",
    "bitcore-lib": "^0.15.0",
    "bootstrap": "^3.3.7",
    "bootstrap-notify": "^3.1.3",
    "browser-request": "^0.3.3",
    "clipboard": "^1.7.1",
    "config": "^1.29.0",
    "express": "^4.16.2",
    "hbs": "^4.0.1",
    "jquery-form": "^3.50.0",
    "level": "^2.0.0",
    "lodash": "^4.0.0",
    "modernizr": "^3.5.0",
    "moment": "^2.19.3",
    "morgan": "^1.9.0",
    "nodemailer": "^4.4.0",
    "openpgp": "^1.3.0",
    "paper-dashboard": "^1.1.0",
    "prompt": "^1.0.0",
    "qrcodejs": "^1.0.0",
    "react": "^0.13.3",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "sprintf-js": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^4.0.1",
    "nock": "^9.1.5",
    "nodemon": "^1.17.3",
    "release-it": "^7.3.0",
    "standard": "^10.0.3"
  }
}
